<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="sans-serif-light"
    android:background="#2cb171">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_png"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:scaleType="fitXY"
        android:background="#2cb171"
        />
    <TextView
        android:id="@+id/textTopCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="A P P"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#304ffe"
        android:textStyle="bold"
        android:textSize="60sp" />
    <TextView
        android:id="@+id/textTopLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/textTopCenter"
        android:layout_below="@id/textTopCenter"
        android:paddingRight="50dp"
        android:text="H"
        android:textColor="#64dd17"
        android:textStyle="bold"
        android:textSize="60sp" />
    <TextView
        android:id="@+id/textTopRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textTopCenter"
        android:layout_below="@id/textTopCenter"
        android:paddingLeft="50dp"
        android:text="Y"
        android:textColor="#ffeb3b"
        android:textStyle="bold"
        android:textSize="60sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIRTHDAY"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="#9ddeff"/>
    <TextView
        android:id="@+id/textBottomCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="110dp"
        android:text="JULIAN"
        android:textColor="#ffeb3b"
        android:textStyle="bold"
        android:textSize="60sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="#111111"
        android:textSize="36sp"
        android:padding="10dp"
        android:text="From Thomas!" />
</RelativeLayout>